{
  "name": "homey-ts-composer",
  "version": "1.0.0",
  "description": "A composer which creates the homey app.json file from typescript code",
  "main": "lib/index.js",
  "bin": {
    "homey-ts-composer": "bin/homey-ts-composer"
  },
  "scripts": {
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags",
    "build": "tsc",
    "test": "jest --collect-coverage",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json"
  },
  "author": {
    "name": "Michael Medin",
    "email": "michael@medin.name"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "jest": "^24.9.0",
    "prettier": "^1.19.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.7.3"
  },
  "files": [
    "lib/**/*"
  ],
  "bugs": {
    "url": "https://github.com/mickem/name.medin.temperature/issues"
  }
}
